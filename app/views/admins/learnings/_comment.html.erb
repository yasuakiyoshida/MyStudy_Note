<div class="col-lg-8 offset-lg-2 admin-comment mb-3">
  <h5 class="text-center"><i class="fa fa-comment"></i> コメント <%= learning.learning_comments.count %>件</h5>
  <% learning_comments.includes(:user).each do |learning_comment| %>
  <div class="row mt-3">
    <div class="col-10 offset-1">
      <%= learning_comment.user.nickname %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <small><%= learning_comment.created_at.strftime("%Y年%m月%d日") %></small>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 offset-1">
      <%= learning_comment.comment %>
    </div>
  </div>
  <div class="row mt-3 pb-3 border-bottom border-dark">
    <div class="col-10 offset-1 text-right">
      <%= link_to "削除",  admins_learning_learning_comment_path(learning_comment.learning_id, learning_comment.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
  <% end %>
  <%= paginate learning_comments %>
</div>
