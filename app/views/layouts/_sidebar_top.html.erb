<div class="sidebar card mx-auto mt-5 shadow-lg">
  <div class="sidebar-header card-header text-center"><i class="fas fa-user-clock"></i> 学習時間</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= link_to user_path(current_user) do %>
          <%= attachment_image_tag current_user, :image, format: "jpeg", fallback: "no_image.jpg" %>
        <% end %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-lg-12 text-center current-user-name">
        <%= link_to current_user.nickname + " さん", user_path(current_user) %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-12 text-center my-study-time">
        <i class="far fa-clock"></i> 今日の学習時間：<%= my_today_study_time %> 時間
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-12 text-center my-study-time">
        <i class="far fa-clock"></i> 昨日の学習時間：<%= my_yesterday_study_time %> 時間
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-12 text-right">
        <small><%= link_to '>>学習時間を確認する', user_learning_times_path(current_user) %></small>
      </div>
    </div>
  </div>
</div>