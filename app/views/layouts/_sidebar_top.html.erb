<div class="row">
  <div class="col-lg-12">
    <div class="card mx-auto mt-5 shadow-lg">
      <div class="card-header text-center" id="sidebar-head-top"><i class="fa fa-hourglass-end"></i>　今日の学習時間</div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-12 text-center">
            <%= link_to user_path(current_user) do %>
              <%= attachment_image_tag current_user, :image, format: "jpeg", fallback: "no_image.jpg", class: "current-user-img" %>
            <% end %>
            <span class="ml-3 current-user-name"><%= link_to current_user.nickname + " さん", user_path(current_user) %></span>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-lg-12">
            <div class="d-flex justify-content-center">
              <i class="far fa-clock fa-4x"></i>
              <p class="study-time pl-2"><strong><%= today_study_time %></strong> 時間</p>
            </div>
          </div>
        </div>
        <div class="row mt-1">
          <div class="col-lg-12">
            <div class="text-center">
              <p>※昨日の学習時間 <strong><%= yesterday_study_time %></strong> 時間</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
