<!DOCTYPE html>
<html>
  <head>
    <title>MystudyNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <header>
        <div class="header-content">
          <%= link_to 'MyStudyNote', root_path, class: "logo" %>
          <ul class="flex">
            <p><%= current_user.nickname %></p>
            <li><%= link_to 'マイページ', user_path(current_user) %></li>
            <li><%= link_to 'MyStudyノートとは', about_path %></li>
            <li><%= link_to 'ユーザー一覧', users_path %></li>
            <li><%= link_to '学習時間を確認', user_learning_times_path(current_user) %></li>
            <li><%= link_to '学習時間を記録', new_learning_path %></li>
            <li><%= link_to 'リスト作成', new_task_path %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </header>
    <% else %>
      <header>
        <div class="header-content">
          <%= link_to 'MyStudyNote', root_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to 'MyStudyノートとは', about_path %></li>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
          </ul>
        </div>
      </header>
    <% end %>
    <%= yield %>
  </body>
</html>
