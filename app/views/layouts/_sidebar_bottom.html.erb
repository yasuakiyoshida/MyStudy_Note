<div class="sidebar card mx-auto mt-2 mb-5 shadow-lg">
  <div class="sidebar-bottom card-header text-center"><i class="fa fa-tasks"></i> ToDoリスト<small> 5件まで表示</small></div>
    <div class="card-body">
    <% if my_tasks.exists? %>
      <% my_tasks.each do |my_task| %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item border-bottom border-secondary">
            <small>期限：<%= my_task.due.strftime("%Y年%m月%d日 %H:%M") %></small></br>
            <%= link_to '・ ' + my_task.title, task_path(my_task.id), class: "text-dark" %></br>
            <small>優先度：<%= my_task.priority_status %><span class="ml-3">進捗度：<%= my_task.progress_status %></span></small>
          </li>
        </ul>
      <% end %>
      <div class="row pt-3 pb-2">
        <div class="col-lg-12 text-right">
          <small><%=link_to '>>リスト一覧を確認する', tasks_path %></small>
        </div>
      </div>
    <% else %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">リストがありません</li>
      </ul>
      <div class="row pt-3 pb-2">
        <div class="col-lg-12 text-right">
          <small><%=link_to '>>ToDoリストを作成する', new_task_path %></small>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>