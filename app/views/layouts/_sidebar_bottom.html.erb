<div class="row">
  <div class="col-lg-12">
    <div class="card mx-auto my-4 shadow-lg">
      <div class="card-header text-center" id="sidebar-head-bottom"><i class="fa fa-tasks"></i>　ToDoリスト<small> 5件まで表示</small></div>
      <div class="card-body">
        <% my_tasks.each do |my_task| %>
          <div class="row">
            <div class="col-lg-12">
              <div class="todolist rounded mb-3 p-2 text-center">
                <small>期限：<strong><%= my_task.due_jst %></strong></small>
                <div class="my-1"><strong><%= link_to my_task.title, task_path(my_task.id), class: "text-dark" %></strong></div>
                <small>優先度：<strong><%= my_task.priority_status %></strong><span class="ml-3">進捗度：<strong><%= my_task.progress_status %></strong></span></small>
              </div>
            </div>
          </div>
        <% end %>
        <%=link_to 'リスト一覧を確認する>>', tasks_path, class: "text-dark" %>
      </div>
    </div>
  </div>
</div>
