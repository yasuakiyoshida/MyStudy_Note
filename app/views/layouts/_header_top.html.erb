<header class="header-top">
  <div class="container d-flex align-items-center">
    <% if admin_signed_in? %>
      <%= link_to image_tag('logo.png'), admins_users_path, class: "logo" %>
      <h2 class="ml-5 text-light">管理者専用</h2>
      <div class="header-ul ml-auto">
        <div class="header-li">
          <span class="border-left"><%= link_to 'User list', admins_users_path %></span>
          <span class="border-left"><%= link_to ' list', admins_learnings_path %></span>
          <span class="border-left border-right"><%= link_to 'Log out', destroy_admin_session_path, method: :delete %></span>
        </div>
      </div>
    <% elsif user_signed_in? %>
      <%= link_to image_tag ('logo.png'), root_path, class: "logo" %>
      <div class="header-ul ml-auto">
        <div class="header-li">
          <span class="border-left"><%= link_to 'Home', root_path %></span>
          <span class="border-left"><%= link_to 'About', about_path %></span>
          <span class="border-left"><%= link_to 'User list', users_path %></span>
          <span class="border-left border-right"><%= link_to 'Log out', destroy_user_session_path, method: :delete %></span>
        </div>
      </div>
    <% else %>
      <%= link_to image_tag('logo.png'), root_path, class: "logo" %>
      <div class="header-ul ml-auto">
        <div class="header-li">
          <span class="border-left"><%= link_to 'Home', root_path %></span>
          <span class="border-left"><%= link_to 'About', about_path %></span>
          <span class="border-left"><%= link_to 'Sign up', new_user_registration_path %></span>
          <span class="border-left border-right"><%= link_to 'Sign in', new_user_session_path %></span>
        </div>
      </div>
    <% end %>
  </div>
</header>