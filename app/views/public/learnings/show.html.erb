<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="card mx-auto my-5 shadow-lg">
        <div class="card-header">学習記録詳細</div>
        <div class="card-img-top text-center pt-3"><%= attachment_image_tag @learning, :image, format: "jpeg", class: "w-75" %></div>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-10 offset-lg-1">
              <%= link_to user_path(current_user) do %>
                <%= attachment_image_tag @user, :image, format: "jpeg", fallback: "no_image.jpg", class: "user-img" %>
              <% end %>
              <span class="ml-2 user-name"><%= link_to @user.nickname, user_path(@user) %></span>
            </div>
        　</div>
          <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
              <h6>《学習日：<span><%= @learning.date.strftime("%Y年%m月%d日") %></span>》</h6>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
              <h6>《学習時間：<span><%= @learning.time %></span> 時間》</h6>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
              <h4>《タイトル》</h4>
              <p><%= @learning.title %></p>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
              <h4>《詳細》</h4>
              <p><%= @learning.detail %></p>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col-lg-10 offset-lg-1 text-center">
              <% if @user == current_user %>
                <%= link_to '学習内容を編集する', edit_learning_path(@learning), class: "btn btn-outline-info px-5" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <%= render 'comment', learning: @learning, learning_comment: @learning_comment, learning_comments: @learning_comments %>
    </div>
    <div class="sidebar col-lg-4">
      <%= render 'layouts/sidebar_top', today_study_time: @today_study_time, yesterday_study_time: @yesterday_study_time %>
      <%= render 'layouts/sidebar_bottom', my_tasks: @my_tasks %>
    </div>
  </div>
</div>