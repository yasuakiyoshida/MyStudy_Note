<div class="container">
  <% breadcrumb :new_session %>
  <%= render "layouts/breadcrumbs" %>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card mx-auto my-5 shadow-lg">
        <div class="card-header sign-header"><i class="fas fa-sign-in-alt"></i> ログイン</div>
        <div class="card-body">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="row mt-4">
              <div class="col-10 offset-1">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-10 offset-1">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, required: true, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-10 offset-1">
                <small class="text-danger">＊ゲストユーザーメールアドレス：test1234user5678@example.com</small><br>
                <small class="text-danger">＊ゲストユーザーパスワード：123456789</small>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-10 offset-1 text-center">
                <%= f.submit "ログインする", class: "btn btn-outline-primary px-5" %>
              </div>
            </div>
          <% end %>  
        </div>
      </div>
      <div class="row mb-3 sign-btn">
        <div class="col-lg-8 offset-lg-2 text-center">
          <%= link_to '会員登録がお済みでない方はこちら', new_user_registration_path, class: "btn btn-outline-info" %>
        </div>
      </div>
      <div class="row mb-5 sign-btn">
        <div class="col-lg-8 offset-lg-2 text-center">
          <%= link_to 'パスワードを忘れた方はこちら', new_user_password_path, class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>