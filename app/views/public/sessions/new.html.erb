<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="card mx-auto my-5 shadow-lg">
        <div class="card-header sign-header"><i class="fas fa-sign-in-alt"></i> ログイン</div>
        <div class="card-body">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="row mt-4">
              <div class="col-10 offset-1">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-10 offset-1">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>
            <div class="row mt-5">
              <div class="col-10 offset-1 text-center">
                <%= f.submit "ログインする", class: "btn btn-outline-primary px-5" %>
              </div>
            </div>
          <% end %>  
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-8 offset-2 text-center">
          <%= link_to '会員登録がお済みでない方はこちら', new_user_registration_path, class: "btn btn-outline-info px-5" %>
        </div>
      </div>
    </div>
  </div>
</div>