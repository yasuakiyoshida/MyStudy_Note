<h1>ユーザー一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>ニックネーム</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :image, format: "jpeg", fallback: "no_image.jpg" %></td>
        <td><%= user.nickname %></td>
      </tr>
    <% end %>
  </tbody>
  <div class="sidebar col-lg-4">
      <%= render 'layouts/sidebar_top', today_study_time: @today_study_time, yesterday_study_time: @yesterday_study_time %>
      <%= render 'layouts/sidebar_bottom', my_tasks: @my_tasks %>
    </div>
</table>
