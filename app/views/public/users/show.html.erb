<div class=".container profile">
  <h1 class="my-3 text-center profile-title">
    <% if @user == current_user %>
      マイページ
    <% else %>
      ユーザー情報
    <% end %>
  </h1>
  <div class="row mx-0">
    <div class="col-6 profile-content-left px-0">
      <div class="card m-3">
        <div class="card-body text-center">
          <%= attachment_image_tag @user, :image, format: "jpeg", fallback: "no_image.jpg", class: "user-img-lg" %>
          <h3 class="mt-3"><%= @user.nickname %></h3>
          <p class="profile-text px-5 mt-3 pb-3"><%= @user.biography %></p>
          <%= link_to '過去の学習時間を確認する', user_learning_times_path(@user), class: "btn btn-outline-info profile-time-btn px-5 mt-2" %><br>
           <% if @user == current_user %>
            <%= link_to 'プロフィールを編集する', edit_user_path(current_user), class: "btn btn-outline-info profile-edit-btn px-5 mt-4" %><br>
            <%= link_to '学習記録を確認する', learnings_path, class: "btn btn-outline-danger profile-learning-btn px-5 mt-4" %><br>
            <%= link_to 'ToDoリストを確認する', tasks_path, class: "btn btn-outline-success profile-list-btn px-5 my-4" %><br>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-6 px-0">
      <div class="card profile-content-right m-3">
        <div class="card-body text-center">
          <h3 class="mb-3">学習時間</h3>
          <table border="1" width="80%" class="mx-auto mb-2 profile-table">
            <tr>
              <th>今日</th>
              <th>昨日</th>
              <th>過去1週間</th>
              <th>過去1ヶ月</th>
            </tr>
              <tr>
              <th><%= @today_study_time %> 時間</th>
              <th><%= @yesterday_study_time %> 時間</th>
              <th><%= @week_study_time %> 時間</th>
              <th><%= @month_study_time %> 時間</th>
            </tr>
          </table>
          <%= column_chart @learning_chart, label: "学習時間 ", width: "100%", id: 'learning_chart' %>
          <h3 class="my-3">ToDoリスト</h3>
          <table border="1" width="80%" class="mx-auto mb-2 profile-table">
            <tr>
              <th>未着手</th>
              <th>処理中</th>
              <th>完了済</th>
              <th>保留中</th>
            </tr>
              <tr>
              <th class="new-task"><%= @new_tasks %>件</th>
              <th class="processing-task"><%= @processing_tasks %>件</th>
              <th class="completed-task"><%= @completed_tasks %>件</th>
              <th class="pending-task"><%= @pending_tasks %>件</th>
            </tr>
          </table>
          <%= pie_chart @task_chart, colors: ["#FF3333","#FF9900","#005FFF","#00DD00"], donut: true, width: "100%", id: "task_chart" %>
        </div>
      </div>
    </div>
  </div>
</div>